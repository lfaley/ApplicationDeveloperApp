{
  "name": "projectplanner-desktop",
  "version": "1.0.0",
  "description": "ProjectPlanner Desktop App (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "vite build",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.projectplanner.desktop",
    "productName": "ProjectPlanner Desktop",
    "files": [
      "main.js",
      "projectplanner-ui.html",
      "context-agent-ui.css"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "babel-jest": "^30.2.0",
    "electron": "^39.2.3",
    "electron-builder": "^24.6.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.5",
    "lottie-react": "^2.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^16.1.0"
  }
}
