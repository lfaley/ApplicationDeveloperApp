{
  "name": "projectplanner-desktop",
  "version": "1.0.0",
  "description": "ProjectPlanner Desktop App (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "echo 'No build step required for pure JS Electron app.'",
    "test": "jest",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.projectplanner.desktop",
    "productName": "ProjectPlanner Desktop",
    "files": [
      "main.js",
      "projectplanner-ui.html",
      "context-agent-ui.css"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.0",
    "jest": "^29.7.0"
  }
}
