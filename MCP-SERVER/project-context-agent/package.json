{
  "name": "project-context-agent",
  "version": "1.0.0",
  "description": "MCP agent for project context management with drift detection and auto-sync",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "project-context-agent": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src tests --ext .ts",
    "prepublish": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "project-context",
    "drift-detection",
    "documentation",
    "git-integration"
  ],
  "author": "ProjectPlanner Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "simple-git": "^3.25.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
